        "def saluda(nombre):\n",
        "  return f\"Hola, {nombre}!\"\n",
        "def despedirse(nombre):\n",
        "  return f\"Adios, {nombre}!\"\n",
        "\n",
        "def mensaje_completo (nombre):\n",
        "  saludo = saluda(nombre)\n",
        "  despedida = despedirse(nombre)\n",
        "  return saludo + \"\\n\" + despedida\n",
        "\n",
        "print(mensaje_completo(\"Leslie\"))"
