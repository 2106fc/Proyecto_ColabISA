        "# Calculadora -> suma, resta, producto, division y potencia\n",
        "def suma(a,b):\n",
        "  return a+b\n",
        "def resta(a,b):\n",
        "  return a-b\n",
        "def producto(a,b):\n",
        "  return a*b\n",
        "def division(a,b):\n",
        "  if b == 0:\n",
        "    return \"Error: no se puede dividir entre 0\"\n",
        "  return a/b\n",
        "def potencia(a,b):\n",
        "  return a ** b\n",
        "\n",
        "def menu():\n",
        "  print(\"----ðŸŒ¸ðŸ§¸ðŸŒ¸------MI CALCULADORA-----ðŸŒ¸ðŸ§¸ðŸŒ¸-----\")\n",
        "  print(\"1. suma\")\n",
        "  print(\"2. resta\")\n",
        "  print(\"3. producto\")\n",
        "  print(\"4. division\")\n",
        "  print(\"5. potencia\")\n",
        "  print(\"6. salir\")\n",
        "while True:\n",
        "  menu()\n",
        "  try:\n",
        "    op = int(input(\"Seleccione una opciÃ³n: \"))\n",
        "    if op < 1 or op > 6:\n",
        "      print(\"OpciÃ³n InvÃ¡lida\")\n",
        "\n",
        "  except ValueError:\n",
        "    print(\"Ingrese un nÃºmero vÃ¡lido\")\n",
        "  if op == 6:\n",
        "    print (\"SALIENDO...\")\n",
        "    break\n",
        "\n",
        "  try:\n",
        "    a = float(input(\"Ingrese el primer nÃºmero: \"))\n",
        "    b = float(input(\"Ingrese el segundo nÃºmero: \"))\n",
        "  except ValueError:\n",
        "    print(\"Error: Ingrese un nÃºmero vÃ¡lido\")\n",
        "  if op == 1:\n",
        "    print(\"Resultado:\", suma(a,b))\n",
        "  elif op == 2:\n",
        "    print(\"Resultado:\", resta(a,b))\n",
        "  elif op == 3:\n",
        "    print(\"Resultado:\", producto(a,b))\n",
        "  elif op == 4:\n",
        "    print(\"Resultado:\", division(a,b))\n",
        "  elif op == 5:\n",
        "    print(\"Resultado:\", potencia(a,b))\n",
        "  else:\n",
        "    print(\"OpciÃ³n invÃ¡lida\")"
