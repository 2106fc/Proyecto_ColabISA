        "# Supongamos que tenemos una heladeria\n",
        "def pedir_sabor():\n",
        "  sabores = [\"ron pasas\",\"coco\",\"chicle\",\"fresa\"]\n",
        "  print(\"Sabor disponible\",\",\",sabores)\n",
        "  #Lower () hace minusculas las palabras\n",
        "  #Strip () elimina los espacios tanto antes como despues para que no hayan\n",
        "  #errores\n",
        "  sabor = input(\"Elige un sabor:\").strip().lower()\n",
        "  #Si sabor no estÃ¡ en sabores\n",
        "  while sabor not in sabores:\n",
        "    sabor = input(\"Elige un sabor:\").strip().lower()\n",
        "  return sabor\n",
        "\n",
        "def pedir_cantidad():\n",
        "  cantidad = int(input(\"Cuantas bolas de nieve quieres?: \"))\n",
        "  while cantidad <= 0:\n",
        "    cantidad = int(input(\"Cuantas bolas de nieve  quieres? (Ingresa un valor): \"))\n",
        "  return cantidad\n",
        "#FunciÃ³n Madre (llama a otras funciones)\n",
        "def pedir_helado():\n",
        "  sabor= pedir_sabor ()\n",
        "  cant = pedir_cantidad()\n",
        "  print(f\"Pedido:{cant} bola(s) de {sabor}\")\n",
        "  return cant, sabor\n",
        "\n",
        "total_pedidos = int(input(\"Cuantos clientes atenderÃ¡s?:\"))\n",
        "for i in range(total_pedidos):\n",
        "  pedir_helado()"
