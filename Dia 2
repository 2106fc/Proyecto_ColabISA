        "  print(f\"El numero {num} es múltiplo de 3 0 de 5\")\n",
        "\n",
        "# saber si el numero es par o impar usando not\n",
        "num = 6\n",
        "if not num % 2 == 0:\n",
        "  print(f\"El numero {num} es impar\")\n",
        "else:\n",
        "  print(f\"El numero {num} es par\")"
