        "## While\n"
      ],
      "metadata": {
        "id": "mFQb5noSy-pY"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "suma = 0\n",
        "números = int(input(\"Ingresa número para sumar o 0 para salir\"))\n",
        "\n",
        "while números != 0: # ! = es equivalente a \"distinto de...\"\n",
        "  suma += números\n",
        "  números = int(input(\"Ingresa número para sumar o 0 para salir\"))\n",
        "\n",
        "print(f\"La suma es {suma}\")"
      ],
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "id": "QvSWKJg_zBWW",
        "outputId": "a739b06d-68ff-4023-a776-2afadcb7600e"
